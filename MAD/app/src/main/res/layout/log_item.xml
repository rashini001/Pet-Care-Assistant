<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:layout_marginBottom="8dp">

    <!-- Text describing the diary log -->
    <TextView
        android:id="@+id/log_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diary Entry Text"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="4dp" />

    <!-- Image preview (if applicable) -->
    <ImageView
        android:id="@+id/log_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/log_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:contentDescription="Diary Log Image" />

    <!-- Video icon (if applicable) -->
    <ImageView
        android:id="@+id/log_video_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/log_text"
        android:layout_toEndOf="@id/log_image"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/ic_media_play"
        android:visibility="gone"
        android:contentDescription="Diary Log Video Icon" />
</RelativeLayout>
