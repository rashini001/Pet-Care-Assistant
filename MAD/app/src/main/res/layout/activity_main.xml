<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient_background">

    <!-- App Logo or Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:text="WOOF"
        android:textSize="60sp"
        android:fontFamily="@font/baloo_bhai"
        android:textStyle="bold"
        android:textColor="#53361a"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5" />

    <!-- Circular Image with Shadow -->
    <RelativeLayout
        android:id="@+id/imageFrame"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appTitle"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:background="@drawable/circular_image_shadow">

        <ImageView
            android:id="@+id/petImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/welocme"
            android:scaleType="centerCrop"
            android:clipToOutline="true" />
    </RelativeLayout>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageFrame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Meet Your Best Friend"
        android:textSize="28sp"
        android:fontFamily="@font/baloo_bhai"
        android:textColor="#a06932"
        android:textStyle="bold|italic"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"/>

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle"
        android:layout_margin="10dp"
        android:text="Shower your furry friends with love and care.! Whether you're a new pet parent or a seasoned owner, WOOF is here to make your pet care journey simple, organized, and fun. Weâ€™re committed to helping you give your furry friends the happy, healthy life they deserve. ðŸ¶ðŸ±ðŸ¾â¤ï¸"
        android:textSize="20sp"
        android:fontFamily="@font/baloo_bhai"
        android:lineSpacingExtra="4dp"
        android:textAlignment="center"
        android:textColor="#a9a9a9"
        />

    <!-- Get Started Button -->
    <Button
        android:id="@+id/centerButton"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Get Started"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/baloo_bhai"
        android:backgroundTint="#664320"
        android:stateListAnimator="@android:anim/slide_in_left"
        android:elevation="6dp" />

    <!-- Footer Icons -->
    <LinearLayout
        android:id="@+id/footerIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp">

        <ImageView
            android:id="@+id/iconOne"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/paw_icon"
            android:layout_marginEnd="85dp" />

        <ImageView
            android:id="@+id/iconTwo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart_icon"
            android:layout_marginEnd="80dp" />

        <ImageView
            android:id="@+id/iconThree"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bone_icon"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>
</RelativeLayout>
