<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/voice"> <!-- Set background to diary.jpg -->


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai"
        android:shadowColor="#888"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="Voice Command Training"
        android:textColor="#9f4d34"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        android:gravity="center" />
    <TextView
        android:id="@+id/command_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Train your virtual pet with simple voice commands! Use the buttons below."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="32dp"
        android:gravity="center"/>

    <!-- Sit Button -->

    <!-- Stand Up Button -->
    <Button
        android:id="@+id/btn_sit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/purple_500"
        android:padding="12dp"
        android:text="Sit"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_standup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/purple_500"
        android:padding="12dp"
        android:text="Stand Up"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Stay Button -->
    <Button
        android:id="@+id/btn_stay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/purple_500"
        android:padding="12dp"
        android:text="Stay"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Jump Button -->
    <Button
        android:id="@+id/btn_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/purple_500"
        android:padding="12dp"
        android:text="Jump"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Eat Button -->
    <Button
        android:id="@+id/btn_eat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/purple_500"
        android:padding="12dp"
        android:text="Eat"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Catch Button -->
    <Button
        android:id="@+id/btn_catch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_500"
        android:padding="12dp"
        android:text="Catch"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
